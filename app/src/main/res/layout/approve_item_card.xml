<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/done_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Abhishek "/>
            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="15 minutes ago"
               />
            </LinearLayout>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="9dp"
                android:text="Lorem m ipsum dolor, sit amet consectetur adipisicing elit. Excepturi quaerat consequatur pariatur ad ipsa aliquam atque accusamus in deserunt nobis!m ipsum dolor, sit amet consectetur adipisicing elit. Excepturi quaerat consequatur pariatur ad ipsa aliquam atque accusamus in deserunt nobis!ipsum dolor, sit amet consectetur adipisicing elit. Excepturi quaerat consequatur pariatur ad ipsa aliquam atque accusamus in deserunt nobis!
               " />
            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="120 "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="#55cc55"
                android:text="Allow "/>
            <Button
                android:id="@+id/deny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ff0000"
                android:layout_marginHorizontal="5dp"
                android:text="Deny "/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>