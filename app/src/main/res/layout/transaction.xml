<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ececec"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="8dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:textAlignment="textEnd"
        android:text="10 hours ago"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:padding="9dp"
        android:text="Lorem m ipsum dolor, sit amet consectetur adipisicing elit. Excepturi quaerat consequatur pariatur ad ipsa aliquam atque accusamus in deserunt nobis!m ipsum dolor, sit amet consectetur adipisicing elit. Excepturi quaerat consequatur pariatur ad ipsa aliquam atque accusamus in deserunt nobis!ipsum dolor, sit amet consectetur adipisicing elit. Excepturi quaerat consequatur pariatur ad ipsa aliquam atque accusamus in deserunt nobis!" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#00ff00"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="1000"/>
        <TextView
            android:id="@+id/done_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:text="Abhishek Kumar"/>
    </LinearLayout>

</LinearLayout>



</androidx.cardview.widget.CardView>